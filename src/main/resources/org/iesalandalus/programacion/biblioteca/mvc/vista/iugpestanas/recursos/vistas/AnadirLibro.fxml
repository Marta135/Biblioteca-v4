<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>

<VBox prefHeight="248.0" prefWidth="326.0" stylesheets="@../estilos/estilos.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.iesalandalus.programacion.biblioteca.mvc.vista.iugpestanas.controladoresvistas.ControladorAnadirLibro">
   <children>
      <GridPane hgap="10.0" vgap="10.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="160.0" minWidth="10.0" prefWidth="76.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="220.0" minWidth="10.0" prefWidth="220.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Título:" GridPane.halignment="RIGHT" />
            <TextField fx:id="tfTitulo" GridPane.columnIndex="1" />
            <Label text="Autor:" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
            <TextField fx:id="tfAutor" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <VBox.margin>
            <Insets bottom="5.0" top="10.0" />
         </VBox.margin>
      </GridPane>
      <HBox prefHeight="40.0" prefWidth="326.0">
         <children>
            <RadioButton fx:id="rbLibroEscrito" mnemonicParsing="false" prefHeight="19.0" prefWidth="120.0" text="Libro Escrito">
               <HBox.margin>
                  <Insets bottom="5.0" left="25.0" top="5.0" />
               </HBox.margin>
            </RadioButton>
            <Label alignment="CENTER" text="Nº Páginas:">
               <HBox.margin>
                  <Insets bottom="5.0" top="7.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="tfNumPaginas" alignment="CENTER" prefHeight="26.0" prefWidth="80.0">
               <HBox.margin>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="3.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <HBox prefHeight="47.0" prefWidth="326.0">
         <children>
            <RadioButton fx:id="rbAudioLibro" mnemonicParsing="false" prefHeight="19.0" prefWidth="120.0" text="Audiolibro">
               <HBox.margin>
                  <Insets bottom="10.0" left="25.0" top="5.0" />
               </HBox.margin>
               <padding>
                  <Insets bottom="10.0" />
               </padding>
            </RadioButton>
            <Label alignment="CENTER" text="Duración:">
               <HBox.margin>
                  <Insets bottom="10.0" top="7.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="tfDuracion" alignment="CENTER" prefHeight="26.0" prefWidth="80.0">
               <HBox.margin>
                  <Insets bottom="10.0" left="24.0" right="10.0" top="3.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="51.0" prefWidth="326.0" spacing="20.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Button fx:id="btCancelar" mnemonicParsing="false" onAction="#cancelar" text="Cancelar" />
            <Button fx:id="btAnadir" mnemonicParsing="false" onAction="#anadirLibro" text="Añadir" />
         </children>
      </HBox>
   </children>
</VBox>
